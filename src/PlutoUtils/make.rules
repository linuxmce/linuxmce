all-recursive:
	for dir in $(SUBDIRS); do cd $$dir; $(MAKE) all; cd ..; done
	
install-recursive:
	for dir in $(SUBDIRS); do cd $$dir; $(MAKE) install; cd ..; done
		
clean-recursive:
	for dir in $(SUBDIRS); do cd $$dir; $(MAKE) clean; cd ..; done

%.d: %.cpp
	@echo -n Computing dependencies for $< 
	@$(CXX) -MM $(CPPFLAGS) $< > $@.$$$$; \
	sed 's,\($*\)\.o[ :]*,\1.o $@ : ,g' < $@.$$$$ > $@; \
	rm -f $@.$$$$
	@echo " done"

%.d: %.c
	@echo -n Computing dependencies for $< 
	@$(CC) -MM $(CPPFLAGS) $< > $@.$$$$; \
	sed 's,\($*\)\.o[ :]*,\1.o $@ : ,g' < $@.$$$$ > $@; \
	rm -f $@.$$$$
	@echo " done"

#cpath = $(notdir $(1))
#cpath = $(subst /,_,$(1))
cpath = $(1)

%.o: %.cpp
#	@echo $(call cpath,$@)
#	@read
	$(CXX) -c $(CPPFLAGS) $(CXXFLAGS) $< -o $(call cpath,$@)

%.o: %.c
	$(CC) -c $(CFLAGS) $< -o $(call cpath,$@)

svn:            
	@$(foreach file,$(sources), svn log $(file) 2> /dev/null | head -2 | tail -1 | cut -d"|" -f1;)

