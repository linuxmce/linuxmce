ROOT = ..
CXX = g++
CXXFLAGS = -Wall -fPIC -Os
CPPFLAGS = -I$(ROOT) -I$(ROOT)/DCE $(SNR_CPPFLAGS) -I/usr/include/json
LDFLAGS = $(SNR_LDFLAGS) -L$(ROOT)/lib
BASELDLIBS = -lSerializeClass -lDCECommon -lPlutoUtils -lpthread -ljson

MYNAME = Event_Plugin_Lite
VERSION = 2.0.0
MYDEVTEMPLATEID = 52mplateID

Gen_Dev_Files = $(GENDEV)/Event_PluginBase.cpp
sources = Main.cpp Event_Plugin.cpp $(Gen_Dev_Files)
