#DEBHELPER#
set -e

CVERSION=`dpkg-query -W -f='${Version}' lirc-modules-source | awk -F "-" '{print $1}'`

case "$1" in
    remove|upgrade)
		echo "Removing all DKMS Modules"
		dkms remove -m lirc -v $CVERSION --all > /dev/null
		echo "Done."
        ;;
esac


