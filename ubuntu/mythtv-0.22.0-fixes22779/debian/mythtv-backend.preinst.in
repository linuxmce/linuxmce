#!/bin/sh

set -e

if [ "$1" = install ] || [ "$1" = upgrade ]; then
	if [ -e "/etc/udev.rules.d/41-mythtv-permissions.rules" ]; then
		if [ "`md5sum \"/etc/udev.rules.d/41-mythtv-permissions.rules\" | sed -e \"s/ .*//\"`" = \
	     	"`dpkg-query -W -f='${Conffiles}' mythtv-backend | sed -n -e \"\\\\' /etc/udev.rules.d/41-mythtv-permissions.rules's/.* //p\"`" ]
		then
			rm -f "/etc/udev.rules.d/41-mythtv-permissions.rules"
		fi
	fi
fi

