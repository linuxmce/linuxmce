<?xml version="1.0" encoding="UTF-8" ?>
<mythuitheme>

    <!-- Base Font Definitions -->
    <font name="basesmall" face="Arial">
        <pixelsize>19</pixelsize>
        <color>#DDDDDD</color>
    </font>

    <font name="basemedium" from="basesmall">
