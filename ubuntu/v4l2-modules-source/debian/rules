#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1



PKGVER=9defbd461e5f
DESTDIR=$(CURDIR)/debian/tmp

CFLAGS = -Wall -g

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif

configure: configure-stamp
configure-stamp:
	dh_testdir
	# Add here commands to configure the package.

	touch configure-stamp


build: build-stamp
	for file in dkms.conf debian/v4l2-modules.postinst debian/v4l2-modules.prerm; do \
		sed -r 's,package_version,$(PKGVER),g' $$file.in >$$file; \
	done

build-stamp: configure-stamp 
	dh_testdir

	# Add here commands to compile the package.
	#$(MAKE)
	#docbook-to-man debian/v4l2-modules-2.6.22-14-generic.sgml > v4l2-modules-2.6.22-14-generic.1

	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	# Add here commands to clean up after the build process.
	#-$(MAKE) clean
	-rm -f dkms.conf debian/v4l2-modules.postinst debian/v4l2-modules.prerm

	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs
	
	# Add here commands to install the package into debian/tmp.
	mkdir -p $(DESTDIR)/usr/src/v4l2-modules-$(PKGVER)
	mkdir -p $(DESTDIR)/lib/firmware
	tar -C v4l-dvb --exclude .svn -c .| tar -C $(DESTDIR)/usr/src/v4l2-modules-$(PKGVER) -x
	find firmware -type d -name .svn -prune -or -type f -exec cp '{}' $(DESTDIR)/lib/firmware ';'
	cp dkms.conf dkms-mods.conf $(DESTDIR)/usr/src/v4l2-modules-$(PKGVER)


# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_installexamples
	dh_install --sourcedir=$(CURDIR)/debian/tmp
#	dh_installmenu
#	dh_installdebconf	
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_python
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_perl
#	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
