#!/bin/bash
PACKAGE_NAME="v4l2-modules"
PACKAGE_VERSION="package_version"
MAKE[0]="make"
AUTOINSTALL=yes

i=0
while read mod; do
	BUILT_MODULE_NAME[$i]="$mod"
	BUILT_MODULE_LOCATION[$i]="v4l/"
	DEST_MODULE_LOCATION[$i]="/updates/v4l"
	((i++))
done </usr/src/"$PACKAGE_NAME-$PACKAGE_VERSION"/dkms-mods.conf
